<div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4 for">
    <div class="login-panel panel panel-default">
        <div class="panel-heading">Create New User</div>
        <div class="panel-body">
            <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= f.error_notification %>
            <fieldset>
                <div class="form-group">
                   <!--  <input class="form-control" placeholder="E-mail" name="email" autofocus="" type="email"> -->
                    <%= f.email_field :email, required: true, autofocus: true ,:class => 'form-control' , :placeholder => 'E-mail'%>
                </div>
                <div class="form-group">

                    <%= f.password_field :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),:class => 'form-control' , :placeholder => 'Password'%>
                </div>
                <div class="form-group">
                    
                    <%= f.password_field :password_confirmation, required: true ,:class => 'form-control' , :placeholder => 'Re-Type Password'%>

                </div>
                <div class="checkbox">
                    <label>
                        <input name="remember" value="Remember Me" type="checkbox">Remember Me
                    </label>
                </div>
                
                <%= f.button :submit, "Create New User" ,:class => 'btn btn-primary'%><%= render "devise/shared/links" %>
            </fieldset>
            <% end %>
            
        </div>
    </div>
</div>

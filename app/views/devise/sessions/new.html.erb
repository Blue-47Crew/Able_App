<div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4">
<div class="login-panel panel panel-default">
	<div class="panel-heading">Log in</div>
	<div class="panel-body">
		<form role="form">
			<fieldset>
			<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
				<div class="form-group">
					
					<%= f.email_field :email, required: false, autofocus: true,:class => 'form-control',:placeholder => 'E-mail' %>
				</div>
				<div class="form-group">
					<%= f.password_field :password, required: false,:class => 'form-control',:placeholder => 'Password'  %>
				</div>
				<div class="checkbox">
					<label>
						
						<%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
					</label>
				</div>
				
				<%= f.button :submit, "Login" ,:class => 'btn btn-primary'%>
				<%= render "devise/shared/links" %>
				<%end%>
			</fieldset>
		</form>
	</div>
</div>
</div>











